<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categori_bottomview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragment.CategoriBottomViewFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:text="상태"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <View
        android:background="#E0E0E0"
        android:layout_height="5px"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"

        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categori_bottomview_VG_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"
            android:text="Very Good"
            android:textSize="10dp"
            android:background="@drawable/boader_board_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categori_bottomview_G_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"
            android:text="Good"
            android:textSize="10dp"
            android:background="@drawable/boader_board_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categori_bottomview_SS_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"
            android:text="Soso"
            android:textSize="10dp"
            android:background="@drawable/boader_board_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categori_bottomview_B_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"
            android:text="Bad"
            android:textSize="10dp"
            android:background="@drawable/boader_board_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categori_bottomview_VB_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"
            android:text="Very Bad"
            android:textSize="10dp"
            android:background="@drawable/boader_board_button"
            />
    </LinearLayout>

    <View
        android:background="#E0E0E0"
        android:layout_height="5px"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categori_bottomview_reset_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"
            android:text="초기화"
            android:background="#FFFFFF"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/categori_bottomview_ok_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="확인"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>

</LinearLayout>