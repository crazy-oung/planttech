<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/price_bottomview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragment.PriceBottomViewFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:text="가격"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <View
        android:background="#E0E0E0"
        android:layout_height="5px"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        >

        <EditText
            android:id="@+id/price_bottomview_min_et"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.4"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bottomview_edittext"
            android:hint="최소가격 입력"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="~"
            />

        <EditText
            android:id="@+id/price_bottomview_max_et"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.4"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bottomview_edittext"
            android:hint="최대가격 입력"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            />

    </LinearLayout>

    <View
        android:background="#E0E0E0"
        android:layout_height="5px"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/price_bottomview_reset_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="10dp"
            android:text="초기화"
            android:background="#FFFFFF"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/price_bottomview_ok_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="확인"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>

</LinearLayout>