<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/layout_main">

    <TextView
        android:id="@+id/PlanTech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/rectangle_1"
        android:layout_alignParentTop="@+id/rectangle_1"
        android:layout_alignParentEnd="@+id/rectangle_1"
        android:layout_alignBottom="@id/rectangle_1"
        android:layout_marginStart="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="16dp"
        android:elevation="11dp"
        android:gravity="center_vertical"
        android:text="@string/PlanTech"
        android:textAppearance="@style/PlanTech" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rectangle_1"
        android:elevation="10dp"/>

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:background="@drawable/rectangle_2"
        android:elevation="4dp"
        android:paddingBottom="10dp"
        />

</RelativeLayout>
